<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <TextView
        android:text="姓名："
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView1"
        android:textAlignment="textStart"
        android:layout_width="60dp"
        android:gravity="center_vertical"
        android:layout_height="30dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView1"
        android:gravity="center_vertical"
        android:id="@+id/tv_manage_StuName"/>

    <TextView
        android:text="学号："
        android:layout_height="30dp"
        android:layout_below="@+id/textView1"
        android:layout_alignParentStart="true"
        android:id="@+id/textView21"
        android:gravity="center_vertical"
        android:layout_width="60dp"
        android:textAlignment="textStart"/>

    <TextView
        android:text="手机号："
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView21"
        android:gravity="center_vertical"
        android:layout_alignParentStart="true"
        android:id="@+id/textView23"
        android:textAlignment="textStart"/>

    <TextView
        android:text="性别："
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView23"
        android:gravity="center_vertical"
        android:layout_alignParentStart="true"
        android:id="@+id/textView25"
        android:textAlignment="textStart"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/textView23"
        android:layout_toEndOf="@+id/textView25"
        android:id="@+id/tv_manage_Sex"/>

    <TextView
        android:text="年龄："
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:id="@+id/textView27"
        android:layout_below="@+id/textView25"
        android:gravity="center_vertical"
        android:layout_alignParentStart="true"
        android:textAlignment="textStart"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/tv_manage_Age"
        android:gravity="center_vertical"
        android:layout_below="@+id/tv_manage_Sex"
        android:layout_toEndOf="@+id/textView25"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/tv_manage_StuID"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/textView21"
        android:layout_toEndOf="@+id/textView1"
        android:layout_below="@+id/textView1"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/tv_manage_PhoneNumber"
        android:gravity="center_vertical"
        android:layout_below="@+id/tv_manage_StuID"
        android:layout_toEndOf="@+id/textView21"/>
</RelativeLayout>
